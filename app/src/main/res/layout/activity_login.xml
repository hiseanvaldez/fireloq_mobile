<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="275dp"
        android:layout_height="275dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo_fireloq" />

    <EditText
        android:id="@+id/tx_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/tx_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="300dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bt_forgotPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_password"
        android:layout_alignEnd="@id/tx_password"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:text="Forgot password?"
        android:textColor="@color/colorAccentDark"
        android:textSize="10sp" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_forgotPass"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccentDark"
        android:text="Sign in"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_login"
        android:layout_alignEnd="@id/bt_login"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="Create an account"
        android:textColor="@color/colorAccentDark"
        android:textSize="10sp" />
</RelativeLayout>